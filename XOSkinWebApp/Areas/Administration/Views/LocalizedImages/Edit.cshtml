@model XOSkinWebApp.ORM.LocalizedImage

@{
  ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Localized Image</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="form-group">
        <label asp-for="Path" class="control-label"></label>
        <input asp-for="Path" class="form-control" />
        <span asp-validation-for="Path" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Language" class="control-label"></label>
        <select asp-for="Language" class="form-control" asp-items="ViewBag.Language"></select>
        <span asp-validation-for="Language" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label class="control-label">Placement Point Code</label>
        <input asp-for="PlacementPointCode" class="form-control" />
        <span asp-validation-for="PlacementPointCode" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Page" class="control-label"></label>
        <select asp-for="Page" class="form-control" asp-items="ViewBag.Page"></select>
        <span asp-validation-for="Page" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
      </div>
      @Html.Hidden("ActionCreate", "False")
      @Html.Hidden("OriginalPlacementCode", "")
      @Html.Hidden("OriginalLanguage", "")
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
  $(document).ready(function () {
    $("#OriginalPlacementCode").val($("#PlacementPointCode").val());
    $("#OriginalLanguage").val($("#Language").children("option:selected").val());
  });
</script>
