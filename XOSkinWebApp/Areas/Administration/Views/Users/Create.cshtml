@model XOSkinWebApp.ORM.User

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
          <label class="control-label">Email Address</label>
          <input asp-for="EmailAddress" class="form-control" />
          <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Home Phone Number</label>
          <input asp-for="HomePhoneNumber" class="form-control" />
          <span asp-validation-for="HomePhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Work Phone Number</label>
          <input asp-for="WorkPhoneNumber" class="form-control" />
          <span asp-validation-for="WorkPhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Additional Phone Number</label>
          <input asp-for="AdditionalPhoneNumber" class="form-control" />
          <span asp-validation-for="AdditionalPhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Password</label>
          <input asp-for="PasswordHash" class="form-control" type="password" />
          <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">First Name</label>
          <input asp-for="FirstName" class="form-control" />
          <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Last Name</label>
          <input asp-for="LastName" class="form-control" />
          <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label class="control-label">Preferred Language</label>
          <select asp-for="PreferredLanguage" class="form-control" asp-items="ViewBag.PreferredLanguage"></select>
        </div>
        <div class="form-group form-check">
          <label class="form-check-label">
            <input class="form-check-input" asp-for="IsLocked" /> Account is Disabled
          </label>
        </div>
        <div class="form-group">
          <label class="control-label">User Group</label>
          <select asp-for="UserGroup" class="form-control" asp-items="ViewBag.UserGroup"></select>
        </div>
        <div class="form-group">
          <input type="submit" value="Create" class="btn btn-primary" />
        </div>
        @Html.Hidden("ActionCreate", "True")
      </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script type="text/javascript">
  $(document).ready(function () {
    document.getElementById('HomePhoneNumber').addEventListener('input', function (e) {
      var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
      e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });

    document.getElementById('WorkPhoneNumber').addEventListener('input', function (e) {
      var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
      e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });

    document.getElementById('AdditionalPhoneNumber').addEventListener('input', function (e) {
      var x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
      e.target.value = !x[2] ? x[1] : '(' + x[1] + ') ' + x[2] + (x[3] ? '-' + x[3] : '');
    });
  });
</script>