@using Microsoft.AspNetCore.Identity;

@model IEnumerable<IdentityRole>

@{
  ViewData["Title"] = "Roles";
}

<h1>Application Roles</h1>

<p>
  <a asp-action="Create">Create New</a>
</p>

<table class="table" id="Roles">
  <thead><tr><th>ID</th><th>Name</th><th>Users</th><th>Update</th><th>Delete</th></tr></thead>
  <tbody>
    @foreach (var role in Model)
    {
      <tr>

        <td>@role.Id</td>
        <td>@role.Name</td>
        <td i-role="@role.Id"></td>
        <td><a class="btn-outline-dark btn" asp-action="Update" asp-route-id="@role.Id">Update</a></td>
        <td>
          <form asp-action="Delete" asp-route-id="@role.Id" method="post">
            <button type="submit" class="btn btn-sm btn-danger">
              Delete
            </button>
          </form>
        </td>
      </tr>
    }
  </tbody>
</table>
<script type="text/javascript">
  $(document).ready(function () {
    var table = $('#Roles').DataTable({
      'order': [[2, 'asc'], [1, 'asc']]
    });

    new $.fn.dataTable.Responsive(table, {
      details: true
    });
  });
</script>