@model XOSkinWebApp.ORM.LocalizedText

@{
  ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Localized Text</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="Text" class="control-label"></label>
        <input asp-for="Text" class="form-control" />
        <span asp-validation-for="Text" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Language" class="control-label"></label>
        <select asp-for="Language" class="form-control" asp-items="ViewBag.Language"></select>
      </div>
      <div class="form-group">
        <label class="control-label">Placement Point Code</label>
        <input asp-for="PlacementPointCode" class="form-control" />
        <span asp-validation-for="PlacementPointCode" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Page" class="control-label"></label>
        <select asp-for="Page" class="form-control" asp-items="ViewBag.Page"></select>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
      @Html.Hidden("ActionCreate", "True")
      @Html.Hidden("OriginalPlacementCode", "")
      @Html.Hidden("OriginalLanguage", "0")
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
